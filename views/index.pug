extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      
      h1 My Portfolio

      
      p.lead.text-light
        | This is my profolio that holds my past 5 projects for my tech degree in full stack Javadcript.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      //takes projects array and creates cell with each projects image source, project temp, and title
      each project in projects
        .cell  
            a(href= `/project/${project.id}`)
              img.thumbnail(src=project.image_urls[0])
              h5= project.project_name
      
